// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurante {
  id          Int           @id @default(autoincrement())
  nombre      String
  direccion   String
  mesas       Mesa[]
  reservas    Reserva[]
  ConsumoMesa ConsumoMesa[]
}

model Cliente {
  id          Int           @id @default(autoincrement())
  cedula      String        @unique
  nombre      String
  apellido    String
  reserva     Reserva[]
  ConsumoMesa ConsumoMesa[]
}

model Mesa {
  id             Int           @id @default(autoincrement())
  nombre         String
  direccion      String
  restaurante    Restaurante   @relation(fields: [id_restaurante], references: [id])
  id_restaurante Int
  posicion_x     Float
  posicion_y     Float
  planta         Int
  capacidad      Int
  reservas       Reserva[]
  ConsumoMesa    ConsumoMesa[]
}

model Reserva {
  id                Int         @id @default(autoincrement())
  fecha             DateTime
  hora_inicio       DateTime
  hora_fin          DateTime
  cliente           Cliente     @relation(fields: [id_cliente], references: [id])
  id_cliente        Int
  mesa              Mesa        @relation(fields: [id_mesa], references: [id])
  id_mesa           Int
  id_restaurante    Int
  restaurante       Restaurante @relation(fields: [id_restaurante], references: [id])
  cantidad_personas Int
  fecha_creacion    DateTime    @default(now())
}

model CategoriaProducto {
  id       Int        @id @default(autoincrement())
  nombre   String
  Producto Producto[]
}

model Producto {
  id           Int               @id @default(autoincrement())
  nombre       String
  categoria    CategoriaProducto @relation(fields: [id_categoria], references: [id])
  id_categoria Int
  precio_venta Float
  productos    DetalleConsumo[]
}

model ConsumoMesa {
  id             Int         @id @default(autoincrement())
  mesa           Mesa        @relation(fields: [id_mesa], references: [id])
  id_mesa        Int
  cliente        Cliente     @relation(fields: [id_cliente], references: [id])
  id_cliente     Int
  restaurante    Restaurante @relation(fields: [id_restaurante], references: [id])
  id_restaurante Int
  estado         String      @default("abierto")
  total          Float
  fechaCreacion  DateTime    @default(now())
  fechaCierra    DateTime?
  DetalleConsumo DetalleConsumo[]
}

model DetalleConsumo {
  id              Int         @id @default(autoincrement())
  consumoMesa     ConsumoMesa @relation(fields: [id_consumo_mesa], references: [id])
  id_consumo_mesa Int
  producto        Producto    @relation(fields: [id_producto], references: [id])
  id_producto     Int
  cantidad        Int
  precio          Float
  total           Float
}